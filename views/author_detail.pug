extends layout

block content

  h1 Author: #{author.name}
  p #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.
    div.btn-toolbar(role='toolbar')
        a.btn.btn-info.me-2(href=author.url+'/update', role='button') Update Author
        a.btn.btn-warning(href=author.url+'/delete', role='button') Delete Author
