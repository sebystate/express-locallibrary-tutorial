extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in genre_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This genre has no books

      div.btn-toolbar(role='toolbar')
        a.btn.btn-info.me-2(href=genre.url+'/update', role='button') Update Genre
        a.btn.btn-warning(href=genre.url+'/delete', role='button') Delete Genre
